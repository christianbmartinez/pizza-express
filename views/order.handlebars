<div class='flex flex-col justify-center items-center text-center py-12 px-6'>
  <h2 class='text-3xl mb-3 font-semibold'>Order a Pizza</h2>
  <p>Browse through our selection of hand crafted pizzas built with the finest
    ingredients.
  </p>
</div>

<div class='mx-auto container px-6 xl:px-0 py-12'>
  <div class='flex flex-col'>
    <div class='flex flex-col justify-center'>
      <div class='relative'>
        <img
          class='w-full rounded-lg shadow-lg'
          src='https://i.pinimg.com/originals/60/f4/53/60f453bd1fe7d061e8fe4d766d830134.jpg'
          alt='Pizza Banner Image'
        />
      </div>
    </div>
    <div class='mt-10 grid lg:grid-cols-2 gap-x-8 gap-y-8 items-center'>
      {{#each pizzas}}
        <div
          class='shadow-lg group group-hover:bg-opacity-60 transition duration-500 relative bg-gray-50 sm:p-28 py-32 px-10 flex justify-center items-center rounded-lg'
        >
          <img
            class='group-hover:opacity-60 transition duration-500 rounded-lg'
            src='{{this.img_url}}'
            alt='Pizza Express | {{this.name}}'
          />
          <div
            class='absolute sm:top-8 top-4 flex justify-center text-center flex-col space-y-2'
          >
            <div>
              <p
                class='group-hover:opacity-60 transition duration-500 text-xl leading-5 text-gray-600 pt-4 md:pt-0'
              >{{this.name}}</p>
            </div>
            <div>
              <p
                class='group-hover:opacity-60 transition duration-500 text-lg font-semibold leading-5 text-gray-800'
              >${{this.price}}</p>
            </div>
          </div>
          <div class='absolute py-6 flex justify-center bottom-4'>
            <a
              class='bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded'
              href='/api/orders/item/{{this.id}}'
            >
              Order Now
            </a>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>