<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <script src='https://cdn.tailwindcss.com'></script>
    <title>Pizza Express</title>
    <script src='/assets/js/index.js'></script>
  </head>
  <body>
    <header class='bg-white'>
      <nav
        class='mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8'
        aria-label='Global'
      >
        <div class='flex lg:flex-1'>
          <a href='/' class='-m-1.5 p-1.5'>
            <span class='sr-only'>Pizza Express</span>
            <img
              class='h-12 w-auto'
              src='https://i.pinimg.com/originals/39/1c/4c/391c4c2a630980c8cb5c382d04c08309.jpg'
              alt='Pizza Express Logo'
            />
          </a>
        </div>
        <div class='flex gap-x-12'>
          <a
            href='/'
            class='text-sm font-semibold leading-6 text-gray-900'
          >Home</a>
          <a
            href='/order'
            class='text-sm font-semibold leading-6 text-gray-900'
          >Order</a>
        </div>
        <div class='flex lg:flex-1 lg:justify-end'>
          <a class='flex items-center text-gray-900' href='#'>
            <svg
              xmlns='http://www.w3.org/2000/svg'
              class='h-6 w-6'
              fill='none'
              viewBox='0 0 24 24'
              stroke='currentColor'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z'
              />
            </svg>
          </a>
          {{#if logged_in}}
            <a
              onclick='logout()'
              class='text-sm cursor-pointer font-semibold leading-6 text-gray-900 cursor-pointer'
            >Log out
              <span aria-hidden='true'>&rarr;</span></a>
          {{else}}
            <a
              href='/login'
              class='text-sm font-semibold leading-6 text-gray-900'
            >Log in
              <span aria-hidden='true'>&rarr;</span></a>
          {{/if}}
        </div>
      </nav>
    </header>
    {{{body}}}
  </body>
</html>